@model List<Order>
@{
    ViewBag.Title = "Your Orders";
}

<div class="text-left">
    <h2>Your Orders</h2>
</div>

@* simple table to list orders *@
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Order #</th><th>Type</th><th>Status</th><th>Total</th><th>Details</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.ID</td>
            <td>@order.OrderType</td>
            <td>@order.Status</td>
            <td>$@order.OrderTotal</td>
            <td>
                <a asp-controller="Order" asp-action="ViewOrderDetails" asp-route-id="@order.ID">View</a>
            </td>
        </tr>

        }
    </tbody>
</table>