@model List<Order>
@{
    ViewBag.Title = "Orders";
}

<div class="text-left">
    <h2>Orders</h2>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Order #</th><th>Type</th><th>Status</th><th>Total</th><th>Update Status</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.ID</td>
            <td>@order.OrderType</td>
            <td>@order.Status</td>
            <td>$@order.OrderTotal</td>
            <td>
                <a asp-controller="Order" asp-action="ViewOrderDetailsEmp" asp-route-id="@order.ID">Update</a>
            </td>
        </tr>

        }
    </tbody>
</table>